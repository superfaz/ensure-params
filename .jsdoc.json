{
  "tags": {
      "allowUnknownTags": false
  },
  "source": {
      "include": [".", "src\\", "package.json", "README.md" ],
      "includePattern": ".+\\.js$",
      "excludePattern": "(node_modules/|docs/)"
  },
  "plugins": [
      "plugins/markdown"
  ],
  "templates": {
      "cleverLinks": true,
      "monospaceLinks": true,
      "default": {
          "outputSourceFiles": true
      }
  },
  "opts": {
      "private": true,
      "destination": "./docs/",
      "template": "node_modules/postman-jsdoc-theme"
  }
}

